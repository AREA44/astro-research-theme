interface Props {
  title?: string | undefined;
  description?: string | undefined;
  banner?: URL | undefined;
  ogImage?: URL | undefined;
}

// Setup configuration options here
let title = "Astro Research Theme";
let description = "Simple Astro theme for research";
let banner = "./banner.jpg";
let authors = [
  {
    id: "1",
