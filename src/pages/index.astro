<BaseLayout title={title} description={description}>
  <div class="n-title">
    <h1>{title}</h1>
  </div>
  <div class="n-byline">
    <div class="byline">
      <ul class="authors">
        {
          authors.map((author) => (
            <li>
              {author.name}
              <sup>{author.id}</sup>
            </li>
          ))
        }
      </ul>
      <ul class="authors affiliations">
        {
          affiliations.map((affiliation) => (
            <li>
              <sup>{affiliation.id}</sup>
              {affiliation.name}
            </li>
          ))
        }
      </ul>
    </div>
