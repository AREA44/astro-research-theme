          authors.map((author) => (
            <li>
              {author.name}
              <sup>{author.id}</sup>
            </li>
          ))
        }
      </ul>
      <ul class="authors affiliations">
        {
          affiliations.map((affiliation) => (
            <li>
              <sup>{affiliation.id}</sup>
              {affiliation.name}
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="n-article">
