---
import { Image } from 'astro:assets'

import BaseLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/Section.astro'
import Video from '@/components/Video.astro'

interface Props {
  title?: string | undefined
  description?: string | undefined
  banner?: URL | undefined
}

// Your configuration options here
import banner from '@/assets/banner.jpg'
import downloadThumb from '@/assets/download-thumb.jpg'

let title = 'Astro Research Theme'
let description = 'Simple Astro Theme for Research'
let authors = [
  {
    id: '1',
    name: 'Adam Allen',
  },
  {
    id: '1',
    name: 'Peter fadler',
  },
];
let affiliations = [
  {
    id: '1',
    name: 'AREA44',
  },
];
let links = [
  {
    id: 'Paper PDF',
    url: 'https://raw.githubusercontent.com/AREA44/astro-research-theme/main/public/pdf-sample.pdf',
  },
  {
    id: 'Astro Banner',
    url: 'https://raw.githubusercontent.com/AREA44/astro-research-theme/main/public/banner.jpg',
  },
  {
    id: 'Code release on GitHub',
    url: 'https://github.com/AREA44/astro-research-theme',
  },
];
